@model RegisterationRequestDto

<form method="post">
	<div class="container border p-4">
		<div class="row text-center">
			<h1>Register</h1>
		</div>
		<div class="row text-center">
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
		<div class="row">
			<div class="col-6 offset-3 pb-2">
				<input asp-for="Name" type="text" class="form-control" placeholder="Name" />
			</div>
			<div class="col-6 offset-3 pb-2">
				<input asp-for="UserName" type="text" class="form-control" placeholder="UserName" />
			</div>
			<div class="col-6 offset-3 pb-2">
				<input asp-for="Email" type="text" class="form-control" placeholder="Email" />
			</div>
			<div class="col-6 offset-3 pb-2">
				<input asp-for="Password" type="password" class="form-control" placeholder="Password" />
				@* <span asp-validation-for="Password" class="text-danger"></span> *@
			</div>
			<div class="col-6 offset-3 pb-2">
				<input asp-for="Country" type="text" class="form-control" placeholder="Country" />
			</div>
			<div hidden class="col-6 offset-3 pb-2">
				<label asp-for="Role" class="control-label"></label>
				<select asp-for="Role" class="form-control" asp-items="ViewBag.SelectList">
					<option value="User" selected>-- Select Role --</option>
				</select>
				<span asp-validation-for="Role" class="text-danger"></span>
			</div>
			<div class="col-6 offset-3 pb-2">
				<button type="submit" class="form-control btn-success" value="submit">Register</button>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}