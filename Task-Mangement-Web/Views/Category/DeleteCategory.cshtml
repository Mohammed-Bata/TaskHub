@model Task_mangement_Web.Models.Dto.CategoryDto

@{
    ViewData["Title"] = "Delete Category";
}

<h1>DeleteCategory</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <form asp-action="DeleteCategory">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id" class="control-label" style="font-size:20px"></label>
            <input asp-for="Id" disabled class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label" style="font-size:20px"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="form-group pb-3">
            <input type="submit" value="Delete" class="btn btn-primary" />
            <a asp-action="IndexCategory">Back to List</a>
        </div>

    </form>
</div>
