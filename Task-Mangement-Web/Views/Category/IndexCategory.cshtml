@model IEnumerable<CategoryDto>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Category List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i>Create New Category</a>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Name
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@{
				int counter = 1;
			}
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@* @item.Id *@
						@counter
					</td>
					<td>
						@item.Name
					</td>
					<td>
						<a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i>Edit</a>
						<a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
					</td>
				</tr>
				counter++;
			}
		</tbody>
	</table>
</div>
